<h1>Listing assets</h1>

<table>
<% for asset in @assets %>
  <tr>
    <td><%= image_tag asset_type_path(asset), :alt => asset.filename %></td>
    <td><%= image_tag asset_type_path(asset, true), :alt => 'thumbnail' %></td>
    <td><%= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

