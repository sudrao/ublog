<h1>Listing uploads</h1>

<table>
  <tr>
    <th>Filename</th>
    <th>Content type</th>
    <th>Size</th>
    <th>Width</th>
    <th>Height</th>
    <th>Parent</th>
    <th>Thumbnail</th>
    <th>Home</th>
  </tr>

<% for upload in @uploads %>
  <tr>
    <td><%=h upload.filename %></td>
    <td><%=h upload.content_type %></td>
    <td><%=h upload.size %></td>
    <td><%=h upload.width %></td>
    <td><%=h upload.height %></td>
    <td><%=h upload.parent_id %></td>
    <td><%=h upload.thumbnail %></td>
    <td><%=h upload.home_id %></td>
    <td><%= link_to 'Show', upload %></td>
    <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
    <td><%= link_to 'Destroy', upload, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

