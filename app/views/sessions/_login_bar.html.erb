<% if logged_in? -%>
  <div id="login-bar-greeting">Logged in as <%= @user %></div>
  <div id="login-bar-action"  >(<%= link_to "Log out", session_path %>)</div>
<% else -%>
  <div id="login-bar-greeting">Not logged in</div>
  <div id="login-bar-action"  >
  	<%= form_tag session_path, :method => :post do %>
  	  <%= label_tag 'username' %>
  	  <%= text_field_tag 'username' %><br />
  	  <%= label_tag 'password' %>
  	  <%= password_field_tag 'password' %><br />
  	  <%= submit_tag "Log in" %>
  	<% end %>
  </div>
<% end -%>
